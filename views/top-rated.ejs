<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top Rated Games</title>
    <link rel="stylesheet" href="/styles.css"> <!-- ✅ Ensure CSS is linked -->
</head>
<body>
      <!-- Floating Particles for Sci-Fi Effect -->
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
  
    <div class="xp-bar">
        <div class="xp-bar-fill"></div>
    </div>

    <div class="top-rated">
        <h1>The Elite Roster</h1>
        <%- include('partials/header') %>  <!-- ✅ Navbar Included -->
        <div class="top-rated-container">
            <% games.forEach(game => { %>
                <div class="game-box">
                    <a href="/game-details/<%= game.id %>">
                        <img src="<%= game.img %>" alt="<%= game.title %>" width="250">
                        <h2><%= game.title %> (<%= game.year %>)</h2>
                        <p>⭐ <%= game.rating %>/10</p>
                        <p><%= game.description %></p>
                    </a>
                </div>
            <% }); %>
        </div>
    </div>
    
    <%- include('partials/footer') %>
</body>
</html>

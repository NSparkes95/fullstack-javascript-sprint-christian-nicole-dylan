<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results for "<%= query %>"</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
      <!-- Floating Particles for Sci-Fi Effect -->
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
  
    <!-- Experience Bar -->
    <div class="xp-bar">
        <div class="xp-bar-fill"></div>
    </div>


    <div class="search-results-container">
        <h1>Search Results for "<%= query %>"</h1>
        <%- include('partials/header') %> 
        <!-- Search Bar -->
        <form action="/search" method="GET">
            <input type="text" name="query" value="<%= query %>" placeholder="Search for a game..." required>
            <button type="submit">üîç Search</button>
        </form>

        <!-- Search Results -->
        <% if (games.length > 0) { %>
            <ul class="search-results-list">
                <% games.forEach(game => { %>
                    <li>
                        <a href="/game-details/<%= game.id %>">
                            <img src="<%= game.img %>" alt="<%= game.title %>" width="150">
                            <div class="game-info">
                                <h2><%= game.title %> (<%= game.year %>)</h2>
                                <p>‚≠ê <%= game.rating %>/10</p>
                                <p><%= game.description %></p>
                            </div>
                        </a>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No games found for "<%= query %>". Try a different search.</p>
        <% } %>
    </div>

    <a href="/" class="back-button">‚Üê Back to Home</a>

    <!-- Footer -->
    <%- include('partials/footer') %> 
</body>
</html>
